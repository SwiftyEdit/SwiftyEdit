<table class="table table-sm">
    {% for page in getPages %}
        <tr>
            <td class="text-nowrap">{{ page.page_se_format_datetime }}</td>
            <td class="w-100">
                <h6 class="mb-0">{{ page.page_title }}</h6>
                <small>{{ page.page_meta_description }}</small>
            </td>
            <td>
                <form action="/admin/pages/edit/" method="post">
                    <button class="btn btn-default" name="page_id" value="{{ page.page_id }}">
                        {{ icon.edit|raw }}
                    </button>
                    <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                </form>
            </td>
        </tr>
    {% endfor %}
</table>